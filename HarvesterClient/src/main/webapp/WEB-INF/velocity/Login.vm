<body>
  <h1>NLA Harvester</h1>
  <h2><span>&gt;</span>Login</h2>
  <div id="container">
    <div id="content">
        <h3>Login</h3>
				##from http://forum.springframework.org/showthread.php?t=10917
		    #if ($acegiSecurityException)
		      <font color="red">
		        Your login attempt was not successful, please check your username and password then try again.<br>
					  ## $!acegiSecurityException.message()
		      </font>
		    #end
        <form action="j_spring_security_check" method="post">
            <fieldset>
                <dl>
                    <dt>Username:</dt>
                    <dd><input type="text" id="username" name="j_username" /></dd>
                    <dt>Password:</dt>
                    <dd><input type="password" id="password" name="j_password" /></dd>
                </dl>
            </fieldset>
            <ul class="buttons">
              <li><input type="submit" value="Login"/></li>
            </ul>            
        </form>
    </div>
  </div>
</body>
</html>
